<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- Exclude test classes from certain checks -->
  <Match>
    <Class name="~.*Test$"/>
    <Bug pattern="URF_UNREAD_FIELD"/>
  </Match>
  
  <!-- Exclude generated code -->
  <Match>
    <Package name="~.*\.generated\..*"/>
  </Match>
  
  <!-- Exclude specific patterns that are common in Quarkus applications -->
  <Match>
    <Bug pattern="EI_EXPOSE_REP"/>
    <Method name="~(get|set).*"/>
  </Match>
  
  <Match>
    <Bug pattern="EI_EXPOSE_REP2"/>
    <Method name="~(get|set).*"/>
  </Match>
  
  <!-- Exclude serialization warnings for DTOs -->
  <Match>
    <Class name="~.*DTO$"/>
    <Bug pattern="SE_NO_SERIALVERSIONID"/>
  </Match>
  
  <!-- Exclude null pointer warnings for dependency injection -->
  <Match>
    <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    <Method name="~.*"/>
    <Or>
      <Field name="~.*" type="~javax\.inject\..*"/>
      <Field name="~.*" type="~jakarta\.inject\..*"/>
    </Or>
  </Match>
  
  <!-- Exclude warnings about unused fields that are injected -->
  <Match>
    <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    <Field annotation="~javax\.inject\.Inject"/>
  </Match>
  
  <Match>
    <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    <Field annotation="~jakarta\.inject\.Inject"/>
  </Match>
  
  <!-- Exclude resource management warnings for managed resources -->
  <Match>
    <Bug pattern="OBL_UNSATISFIED_OBLIGATION"/>
    <Method name="~.*"/>
  </Match>
</FindBugsFilter> 