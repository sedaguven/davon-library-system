root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2

[*.{xml,yaml,yml}]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,js,ts}]
indent_style = space
indent_size = 2 